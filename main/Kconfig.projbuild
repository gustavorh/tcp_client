menu "TCP Client Configuration"

    config TCP_CLIENT_WIFI_SSID
        string "WiFi SSID"
        default "YOUR_WIFI_SSID"
        help
            SSID (network name) for the WiFi network to connect to.

    config TCP_CLIENT_WIFI_PASSWORD
        string "WiFi Password"
        default "YOUR_WIFI_PASSWORD"
        help
            WiFi password (WPA or WPA2) for the access point.

    config TCP_CLIENT_MAXIMUM_RETRY
        int "Maximum retry attempts"
        default 5
        help
            Set the maximum number of connection retry attempts if WiFi connection fails.

    config TCP_CLIENT_API_ENDPOINT
        string "API Endpoint URL"
        default "http://192.168.1.122:9000/api/esp32"
        help
            Complete URL of the REST API endpoint where data will be sent.

    config TCP_CLIENT_POST_INTERVAL
        int "Data transmission interval (seconds)"
        default 10
        help
            Interval in seconds between data transmissions to the API.

endmenu 